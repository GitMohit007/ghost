<!-- Launch file for RealSense R200 camera -->
<launch>

    <arg name="camera"       default="camera" />
    <arg name="manager"      default="manager" />
    
    <param name="$(arg camera)/enable_depth"      type="bool" value="false" />
    <param name="$(arg camera)/enable_color"      type="bool" value="true" />
    <param name="$(arg camera)/enable_pointcloud" type="bool" value="false" />
    <param name="$(arg camera)/enable_tf"         type="bool" value="true" />
    <param name="$(arg camera)/mode"              type="str"  value="manual" />
    <param name="$(arg camera)/depth_width"       type="int"  value="640" />
    <param name="$(arg camera)/depth_height"      type="int"  value="480" />
    <param name="$(arg camera)/color_width"       type="int"  value="1920" />
    <param name="$(arg camera)/color_height"      type="int"  value="1080" />
    <param name="$(arg camera)/depth_fps"         type="int"  value="30" />
    <param name="$(arg camera)/color_fps"         type="int"  value="30" />


  <include file="$(find realsense_camera)/launch/includes/nodelet.launch.xml">
    <arg name="manager"      value="$(arg manager)" />
    <arg name="camera"       value="$(arg camera)" />
    <arg name="camera_type"  value="R200" />
    <arg name="serial_no"    value="" />
    <arg name="usb_port_id"  value="" /> <!-- USB "Bus#-Port#" -->
    <arg name="rgb"          value="" />

  </include>

</launch>